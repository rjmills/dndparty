<%= form_with url: login_post_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div>
    <%= check_box_tag :remember, params[:remember], true %>
    <%= label_tag :remember %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
  <div>
    <%= link_to 'Forgot Password?', new_password_reset_path %>
  </div>
<% end %>